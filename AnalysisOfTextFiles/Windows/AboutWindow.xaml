<Window x:Class="AnalysisOfTextFiles.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="About 'Analyser of docx'" FontSize="18" Margin="10" Grid.Row="0" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
        <Grid Grid.Row="1">
            <TextBlock Text="Current version: 1.2.7" Margin="2" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Text="Updated at: 11.01.2025" Margin="2" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="3">
            <TextBlock Margin="2" VerticalAlignment="Center" TextAlignment="Center">
                <Hyperlink
                    NavigateUri="https://github.com/DimaSydorko/AnalysisOfTextFiles?tab=readme-ov-file#last-versions"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    Check for updates
                </Hyperlink>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="4">
            <TextBlock Text="For bug reports or ideas of improvement please write here:" Margin="2"
                       VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="5">
            <TextBlock Margin="2" VerticalAlignment="Center" TextAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/DimaSydorko/AnalysisOfTextFiles/issues"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Github
                </Hyperlink>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="6">
            <TextBlock Text="Creator: Dmytro Sydorko" Margin="2" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="7">
            <Button Content="⬅️ Back" Margin="10" Click="BtnClose_Click" Background="#00000000" />
        </Grid>
    </Grid>
</Window>