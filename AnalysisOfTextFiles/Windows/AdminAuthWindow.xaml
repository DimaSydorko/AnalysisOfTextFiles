<Window x:Class="AnalysisOfTextFiles.AdminAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Auth" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Admin authorization" FontSize="18" Margin="10" Grid.Row="0" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
        <Grid Grid.Row="1">
            <TextBlock Text="Password:" Margin="10" VerticalAlignment="Center" />
            <PasswordBox x:Name="txtPassword" Margin="10" VerticalAlignment="Center" Width="200" />
        </Grid>
        <Button Content="Login" Margin="10 0" Grid.Row="2" Click="BtnLogin_Click" IsDefault="True" />
        <Button Content="Cancel" Margin="10" Grid.Row="3" Click="BtnClose_Click" />
    </Grid>
</Window>